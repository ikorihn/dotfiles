[include]
  path = ~/.config/git/config.local
  path = ~/.config/git/delta/themes.gitconfig

[core]
  editor = nvim
  precomposeunicode = true
  quotepath = false
  ignorecase = false
  # sparsecheckout = true

[init]
  templatedir = ~/.config/git/template

[difftool]
  prompt = false
[difftool "bbdiff"]
  cmd = bbdiff --wait --resume \"$LOCAL\" \"$REMOTE\"
[mergetool "bbdiff"]
  cmd = bbdiff --wait --resume \"$LOCAL\" \"$REMOTE\"
[difftool "vimdirdiff"]
  cmd = nvim -f '+next' '+execute \"DirDiff\" argv(0) argv(1)' $LOCAL $REMOTE
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[diff]
  tool = vimdirdiff
[merge]
  tool = vimdiff
  ff = true

[alias]
  pushf = push --force-with-lease --force-if-includes
  difft = difftool --ignore-submodules --dir-diff --no-symlinks --tool=vimdirdiff
  dirdiff = difftool --dir-diff
  st = status
  sw = switch
  swc = switch -c
  br = branch
  cp = cherry-pick
  ress = restore --staged .
  diffw = diff --word-diff # 行ごとの差分じゃなくて，単語レベルでの差分を色付きで表示する
  logn = log --name-status --oneline
  lo = log --color=always --pretty=format:'%Cgreen%h %Creset%ad %Cblue%ae %Cred%d %Creset%s' --date=iso-strict-local
  stu = status -uno # Untracked filesを表示せず，not stagedと，stagedだけの状態を出力する
  stali = stash list
  graph = log --graph --date=iso --decorate=short --all --pretty=format:'%C(green)%h %C(reset)%ad %C(blue)%ae %C(red)%d %C(reset)%s'
  find-merge = "!sh -c 'commit=$0 && branch=${1:-HEAD} && (git rev-list $commit..$branch --ancestry-path | cat -n; git rev-list $commit..$branch --first-parent | cat -n) | sort -k2 | uniq -f1 -d | sort -n | tail -1 | cut -f2'"
  show-merge = "!sh -c 'merge=$(git find-merge $0 $1) && [ -n \"$merge\" ] && git show $merge'"
  version-tags = "tag -l --sort=-v:refname"
  sort-tags = "tag -l --sort=-creatordate --format='%(creatordate:iso-strict) %(refname:short) %(subject) %(creator)'"

[fetch]
  prune = true

[interactive]
  diffFilter = delta --color-only --features=interactive

[pager]
   # log = delta
   # reflog = delta
   show = delta
   diff = delta

[delta]
  features = woolly-mammoth
  # line-numbers = true
  # side-by-side = true

[delta "interactive"]
  keep-plus-minus-markers = false

[delta "decorations"]
  syntax-theme = OneHalfDark
  commit-decoration-style = blue ol
  commit-style = raw
  file-style = omit
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style = file line-number syntax
  plus-style = syntax "#4d733f"

[credential]
  helper = osxkeychain

[pull]
  rebase = true

[commit]
  verbose = true
  template = ~/.config/git/commit_template

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge --skip -- %f
  process = git-lfs filter-process --skip
  required = true

[ghq]
  root = ~/repos
[log]
	date = iso-strict
[push]
	autoSetupRemote = true
